{
  "name": "harmonize",
  "version": "1.0.0",
  "description": "A web app that transforms drawing into generative music",
  "scripts": {
    "dev": "webpack serve --mode development & tailwindcss -i ./src/index.css -o ./dist/output.css --watch",
    "build": "webpack --mode production && tailwindcss -i ./src/index.css -o ./dist/output.css && node copy-html.js",
    "start": "serve -s dist",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/output.css"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.1",
    "tone": "^15.0.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
